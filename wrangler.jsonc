{
  "name": "learn-notifier",
  "main": "src/index.js",
  "compatibility_date": "2025-09-18",
  "compatibility_flags": ["nodejs_compat"],
  "workers_dev": true,
  "minify": true,
  "upload_source_maps": true,
  "account_id": "3fde6c274714fac42161b614a6e2d032",
  "triggers": {
    // Runs at 09:00 and 18:00 Almaty time (UTC+6) = 03:00 and 12:00 UTC
    "crons": ["0 3 * * *", "0 12 * * *"]
  },
  "vars": {
    // Image generation API provider: "openai" or "openrouter"
    "IMAGE_API_PROVIDER": "openai",
    // OpenAI API key (if using OpenAI)
    "OPENAI_API_KEY": "",
    // OpenRouter API key (if using OpenRouter)
    "OPENROUTER_API_KEY": "",
    // OpenRouter model (if using OpenRouter, e.g., "dall-e-3", "openai/dall-e-3")
    "OPENROUTER_MODEL": "dall-e-3",
    // Telegram bot token
    "TELEGRAM_BOT_TOKEN": "",
    // Telegram chat ID to send messages to
    "TELEGRAM_CHAT_ID": ""
  }
}
